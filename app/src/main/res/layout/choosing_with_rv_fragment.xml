<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".filter.industry.ui.ChoosingIndustryFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_industry"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="@string/vacancy_headline">
    </androidx.appcompat.widget.Toolbar>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIndustryList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:animationCache="true"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/choose_industry_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_search"
        tools:listitem="@layout/item_industry" />

    <FrameLayout
        android:id="@+id/edit_text_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_industry">

        <EditText
            android:id="@+id/edit_text_search_input"
            style="@style/EditTextStyle"/>

        <ImageView
            android:id="@+id/iv_icon_search"
            style="@style/IconEditTextStyle"
            android:src="@drawable/ic_search" />

        <ImageView
            android:id="@+id/iv_icon_clear"
            style="@style/IconEditTextStyle"
            android:src="@drawable/ic_clear"
            android:visibility="gone"/>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton style="@style/ChooseButtonStyle"
        android:id="@+id/choose_industry_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_24"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvNoInternetPlaceholder"
        style="@style/PlaceholderMessage"
        android:text="@string/no_internet_error"
        android:visibility="gone"
        app:drawableTopCompat="@drawable/placeholder_no_internet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_search" />

    <TextView
        android:id="@+id/tvNotFoundPlaceholder"
        style="@style/PlaceholderMessage"
        android:text="@string/list_error"
        android:visibility="gone"
        app:drawableTopCompat="@drawable/placeholder_not_found"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_search" />

</androidx.constraintlayout.widget.ConstraintLayout>
